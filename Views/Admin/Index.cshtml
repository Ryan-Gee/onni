            <th></th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-controller="Projects" asp-action="Details" asp-route-id="@item.ProjectId"> @Html.DisplayFor(modelItem => item.ProjectName)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.BodyContent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Files)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Images)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ViewCounts)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LikeCounts)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tags)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoriesName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParentProject.BodyContent)
        </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Status.StatusName)
            </td>
            <td>
                <form asp-area="Admin" asp-action="Public" asp-route-id="@item.ProjectId" method="post">

                    @if (item.StatusId == 1)
                    {
                        <button type="submit" class="btn btn-link">Public</button>
                    }
                </form>
            </td>
            <td>
                <a class="btn btn-link" asp-controller="Projects" asp-action="Delete" asp-route-id="@item.ProjectId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
