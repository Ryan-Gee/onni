@model IEnumerable<onni.Models.Categories>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Edit Categories</h2>

<div class="row">
    <div class="col"></div>
    <div class="col-sm-6">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoriesName)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoriesName)
                        </td>
                        <td class="text-right">
                            <a asp-action="Edit" asp-route-id="@item.CategoriesId">Edit</a> /
                            @*<a asp-action="Details" asp-route-id="@item.CategoriesId">Details</a> |*@
                            <a class="text-danger" asp-action="Delete" asp-route-id="@item.CategoriesId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
        <a class="btn btn-primary btn-block" asp-action="Create">Add Category</a>
        <a asp-controller="Admin" asp-action="Report">< Back to Report</a>

    </div>
    <div class="col"></div>

</div>

