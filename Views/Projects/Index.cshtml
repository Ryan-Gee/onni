@model IEnumerable<onni.Models.Projects>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="container">
    <!-- All project listings -->
    <div class="projects">
        @foreach (var item in Model)
        {
            <div class="card mb-4 d-flex flex-wrap">
                <div class="row">
                    <!-- Thumbnail at the top of the card -->
                    <div class="col-md-6">
                        <img class="img-fluid" src="https://www.rimolgreenhouses.com/sites/default/files/greenhouses/galleries/Center2P30.jpg" alt="" />
                    </div>
                    <!-- Project title -->
                    <!-- <h2 class="card-header"></h2> -->
                    <div class="col-md-6 ">
                        <h2><a href="project.html">@Html.DisplayFor(modelItem => item.ProjectName)</a></h2>
                        <!-- User attribution -->
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.UserName)</h5>
                        <!-- Description -->
                        <p class="card-text">Lorem ipsum dolor sit amet, consectiteur adispiscing elit, sed diam.</p>
                        <!-- Category icons -->
                        <div class="btn-group category-group" role="group">
                            <button class="icon icon-category">
                                <img src="icons/leaf.svg" alt="environmental" />
                            </button>
                            <button class="icon icon-category">
                                <img src="icons/user.svg" alt="social" />
                            </button>
                        </div>
                        <!-- Views and likes icons (used button group as default styling is close) -->
                        <div class="btn-group stats-group" role="group">
                            <button class="stat">
                                <img src="icons/eye.svg" alt="views" class="mr-2" />@Html.DisplayFor(modelItem => item.ViewCounts)
                            </button>
                            <button class="stat">
                                <img src="icons/heart.svg" alt="likes" class="mr-2" />@Html.DisplayFor(modelItem => item.LikeCounts)
                            </button>
                        </div>
                        <div>
                            <a asp-action="Edit" asp-route-id="@item.ProjectId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ProjectId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.ProjectId">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

