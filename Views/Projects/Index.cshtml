    <div class="projects row">

        @foreach (var item in Model.Projects)
        {
            <div class="card mb-4 col-lg-4 col-md-6 col-sm-12">
                <!-- Thumbnail at the top of the card -->
                <div class="project-thumbnail">
                    @{string pic = item.Images;}
                    @if (pic != null)
                    {
                        <img class="img-fluid" src="/upload/img/@pic" alt="" />
                    }
                    else
                    {
                        <img class="img-fluid" src="https://via.placeholder.com/640x400.png?text=No+Image" alt="" />
                    }
                </div>
                <!-- Project title -->
                <h2 class="card-header">
                    <a asp-action="Details" asp-route-id="@item.ProjectId">@item.ProjectName</a>
                </h2>
                <div class="card-body">
                    <!-- User attribution -->
                    <h5 class="card-title">By @item.UserName</h5>
                    <!-- Category icons -->
                    <div class="btn-group category-group" role="group">
                        <button class="icon icon-category">
                            <img src="icons/leaf.svg" alt="environmental" />
                        </button>
                        <button class="icon icon-category">
                            <img src="icons/user.svg" alt="social" />
                        </button>
                    </div>
                    <!-- Views and likes icons (used button group as default styling is close) -->
                    <div class="btn-group stats-group" role="group">
                        <button class="stat">
                            <img src="icons/eye.svg" alt="views" class="mr-2" />@item.ViewCounts
                        </button>
                        <button class="stat">
                            <img src="icons/heart.svg" alt="likes" class="mr-2" />@item.LikeCounts
                        </button>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
