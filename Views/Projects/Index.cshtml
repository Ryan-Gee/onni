@model IEnumerable<onni.Models.Projects>

@{
    ViewData["Title"] = "Index";
    
    Layout = "~/Views/Shared/_Layout.cshtml";

}

    <div data-page="project-index">
        <form asp-controller="Projects" asp-action="Index">
            <p>
                Search: <input type="text" name="search">
                <input type="submit" value="Search" />
            </p>
        </form>
        @if (!String.IsNullOrEmpty(ViewBag.searchString)){
            <p>Results of @ViewBag.searchString</p>
        }
        <h2>Index</h2>
        @if (User.Identity.IsAuthenticated)
        {
            <p>
                <a asp-action="Create">Create New</a>
            </p>
        }
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProjectName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BodyContent)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Files)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Images)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ViewCounts)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LikeCounts)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Tags)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ParentProject)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.ProjectId"> @Html.DisplayFor(modelItem => item.ProjectName)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td>
                            <div class="bodyContent-inputs" style="display:none">
                                @Html.DisplayFor(modelItem => item.BodyContent)
                            </div>
                            <div class="bodyContent-outputs">

                            </div>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Files)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Images)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ViewCounts)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LikeCounts)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tags)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.CategoriesName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ParentProject.ProjectName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status.StatusName)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ProjectId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ProjectId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.ProjectId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>