@model IEnumerable<onni.Models.Comments>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<!-- Comments section -->
<div class="comments mt-5 pb-3">
    <!-- Comments title -->
    <h2>project discussion</h2>
            @foreach (var item in Model)
            {
                <!-- Section elements used for comments, similar styling to project sections -->
                <section class="comment mb-5 mt-5">
                    <!-- User name and image -->
                    <h4 id="comment-user">
                        <img class="profile-img" src="https://randomuser.me/api/portraits/women/32.jpg" alt="profile" height="30" />
                        @Html.DisplayFor(modelItem => item.UserName)
                    </h4>
                    <!-- Body of the comment itself -->
                    <p class="comment-body m-4">@Html.DisplayFor(modelItem => item.BodyContent)</p>
                </section>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.CommentDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Project.ProjectName)
                    </td>*@
                    <div>
                        <a asp-action="Edit" asp-route-id="@item.CommentId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.CommentId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.CommentId">Delete</a>
                    </div>
            }
</div>
