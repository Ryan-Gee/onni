@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col"></div>
    <div class="col-sm-6">
        <h2 class="text-center">Edit Roles</h2>

        <table class="table">
            <tr>
                <th>Role</th>
                <th></th>
            </tr>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td class="text-right">
                        <a class="text-primary" asp-action="Update" asp-route-id="@role.Id">Edit</a> /
                        <a class="text-danger" asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                    </td>
                </tr>
            }
        </table>
        <a class="btn btn-primary btn-block" asp-action="Create">Add Role</a>
        <a asp-controller="Admin" asp-action="Report">< Back to Report</a>

    </div>
    <div class="col"></div>

</div>
